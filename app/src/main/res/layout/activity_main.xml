<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/main_16"
        android:layout_marginEnd="@dimen/main_16"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/btnCategory"
            style="@style/StyleNavButton"
            android:layout_marginEnd="2dp"
            android:backgroundTint="@color/category_button_color"
            android:text="@string/button_category" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFavorites"
            style="@style/StyleNavButton"
            android:layout_marginStart="2dp"
            android:backgroundTint="@color/favorites_button_color"
            android:text="@string/button_favorites"
            app:icon="@drawable/ic_heart_empty"
            app:iconGravity="textEnd" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>